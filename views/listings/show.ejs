<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 product-detail-card"> 
            
            <% if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" class="card-img-top img-fluid" alt="<%= listing.title %>">
            <% } else { %>
                <div class="p-5 text-center bg-light">
                    <p class="text-muted">No Image Available</p>
                </div>
            <% } %>

            <div class="card-body">
                <h1 class="card-title fw-bold"><%= listing.title %></h1>
                <p class="card-text text-muted mb-4"><%= listing.description %></p>
                <hr>
            
                <p class="fs-4 text-success fw-bold mb-3">
                    PKR 
                    <% if (listing.price !== null && listing.price !== undefined) { %>
                        <%= listing.price.toLocaleString() %>
                    <% } else { %>
                        N/A
                    <% } %>
                </p>
                
                <p class="text-muted small mb-4">
                    <% if (listing.author) { %>
  Sold by: <%= listing.author.username %>
<% } else { %>
  Sold by: Unknown
<% } %>

                </p>

                <% if (currentUser && listing.author.equals(currentUser._id)) { %>
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning w-100 mb-2">Edit Listing</a>
                    
                    <form class="d-grid" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    
                <% } else if (currentUser) { %>
                    <form method="POST" action="/cart/add/<%= listing._id %>">
                        <button class="btn btn-primary btn-lg w-100" type="submit" <%= inCart ? 'disabled' : '' %>>
                            <% if (inCart) { %>
                                Already in Cart
                            <% } else { %>
                                Add to Cart
                            <% } %>
                        </button>
                    </form>
                    
                <% } else { %>
                    <p class="text-info text-center mb-3">Please <a href="/login">log in</a> to purchase this item.</p>
                <% } %>

            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h3 class="mt-4 mt-md-0">More Information</h3>
        <div class="alert alert-light mt-3">
            <h6 class="alert-heading">Delivery Estimate</h6>
            <p>5-7 business days within Pakistan.</p>
        </div>
    </div>
</div>