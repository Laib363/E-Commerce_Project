<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Add a New Product Listing</h1>
      <div class="card shadow-sm border-0 p-4">
        
        <form method="POST" action="/listings" novalidate class="validated-form">
          
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
              type="text" 
              class="form-control" 
              id="title" 
              name="listing[title]" 
              required
              placeholder="e.g., Premium Double-Walled Water Bottle"
            >
            <div class="invalid-feedback">
              Please enter a title for your product.
            </div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea 
              class="form-control" 
              id="description" 
              name="listing[description]" 
              rows="4" 
              required
              placeholder="Describe your product in detail."
            ></textarea>
            <div class="invalid-feedback">
              Please provide a detailed description.
            </div>
          </div>

          <!-- Image URL -->
          <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input 
              type="url" 
              class="form-control" 
              id="image" 
              name="listing[image]" 
              placeholder="https://example.com/product-image.jpg"
              required
            >
            <div class="invalid-feedback">
              Please provide a valid image URL.
            </div>
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label for="price" class="form-label">Price (PKR)</label>
            <div class="input-group">
              <span class="input-group-text">PKR</span>
              <input 
                type="number" 
                class="form-control" 
                id="price" 
                name="listing[price]" 
                min="0"
                step="0.01"
                required
              >
              <div class="invalid-feedback">
                Price is required and must be a valid amount.
              </div>
            </div>
          </div>
          
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark btn-lg mt-3">Create Listing</button>
            <a href="/listings" class="btn btn-outline-secondary mt-1">Cancel</a>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- Simple JavaScript for Bootstrap Form Validation -->
<script>
  (function () {
    'use strict'
    const forms = document.querySelectorAll('.validated-form')
    Array.from(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>